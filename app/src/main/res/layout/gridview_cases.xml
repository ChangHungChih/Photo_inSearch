<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayout_case"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:padding="6dp">


    <TextView
        android:id="@+id/tvCaseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="date" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_margin="6dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:background="#a63939"
        >

        <ImageView
            android:id="@+id/ivCasePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/p02" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCaseBuilder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Builder" />

    </LinearLayout>

</LinearLayout>